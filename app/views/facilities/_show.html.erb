<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">New Facility</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <div class="row mb-2">
            <div class="col-md-12">
              <h3><%= @facility.name %></h3>
            </div>
          </div>
          <% if @facility.display_name.present? %>
            <div class="row mb-2">
              <div class="col-md-3">Display Name</div>
              <div class="col-md-9"><b><%= @facility.display_name %></b></div>
            </div>
          <% end %>
          <div class="row mb-2">
            <div class="col-md-3">Contact Number</div>
            <div class="col-md-9"><b><%= @facility.contact_number %></b></div>
          </div>
          <div class="row mb-2">
            <div class="col-md-3">Email</div>
            <div class="col-md-9"><b><%= @facility.email %></b></div>
          </div>
          <% if @facility.fax_number.present? %>
            <div class="row mb-2">
              <div class="col-md-3">Fax Number</div>
              <div class="col-md-9"><b><%= @facility.fax_number %></b></div>
            </div>
          <% end %>
          <% if @facility.users.length > 0 %>
            <div class="row mb-2">
              <div class="col-md-3">Users</div>
              <div class="col-md-9"><b><%= sanitize @facility.users.map(&:full_name).join('<br>') %></b></div>
            </div>
          <% end %>
          <% if @facility.address.to_s.present? %>
            <div class="row mb-2">
              <div class="col-md-3">Address</div>
              <div class="col-md-9"><b><%= sanitize @facility.address.to_s %></b></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to edit_facility_path(id: @facility.id), class: 'btn btn-info', remote: true do %>Edit Facility<% end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
